<h1><%= @patient.name %></h1>
<% @patient.appointments.each do |appointment| %>
  <% @patient_doctor = @patient.doctors.find(appointment.doctor_id) %>
  <p>Doctor: <%= link_to @patient_doctor.name, doctor_path(@patient_doctor) %> 
  <%= link_to appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M"), appointment_path(appointment) %><br>
<% end %>